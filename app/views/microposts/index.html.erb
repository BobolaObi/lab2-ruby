<p id="notice"><%= notice %></p>

<h1>Microposts</h1>

<table>

  <thead>
    <tr>
      <th>Message</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
 
  </thead>

  <tbody>
    <% @microposts.each do |micropost| %>
      <tr>

        <td><%= micropost.message %> <hr styles:"border:2px solid black;"> </td>
        
        <td><%= micropost.user.first_name %> <%= micropost.user.last_name %></td>
        
        <td><%= link_to 'Show', micropost %> </td>
        <td><%= link_to 'Edit', edit_micropost_path(micropost) %></td>
        <td><%= link_to 'Destroy', micropost, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
     
    <% end %>
  </tbody>
  <hr styles:"border:2px solid black;">
</table>

<br>


